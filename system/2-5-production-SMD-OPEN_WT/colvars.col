###Lipid Head### 

Colvarstrajfrequency    500
Colvarsrestartfrequency 5000

colvar {
   name CA_Translation
   distance {
      group1 {
         dummyAtom ( 46.122, 46.122, 46.122 )
      }
      group2 {
         atomsFile      TRAJ_ROT_FILE.pdb
         atomsCol       B
         atomsColValue  1.0
      }
   }
}

harmonic {
   colvars CA_Translation
   centers 0
   forceConstant 1000
}

colvar {
  name CA_Rotation
  orientation {
    refPositionsFile  TRAJ_ROT_FILE.pdb
    refPositionsCol   B  
    refPositionsColValue  1.0
    atoms {
    	atomsFile      TRAJ_ROT_FILE.pdb
    	atomsCol       B
    	atomsColValue  1.0
    }
  }
}

harmonic {
   colvars CA_Rotation
   centers ( 1, 0, 0, 0 )
   forceConstant 1000
}

colvar {
   ON_2_FE

   width 0.1
   lowerboundary 1.0
   upperboundary 14.0
   lowerwallconstant 10.0
   upperwallconstant 10.0

   distance {
      group1 {
         atomsFile      FE.pdb
         atomsCol       B
         atomsColValue  1.0
      }
      group2 {
         atomsFile      ON.pdb
         atomsCol       B
         atomsColValue  1.0
      }
   }
}

abf {
   colvars ON_2_FE
   fullSamples 500
   hideJacobian
}


